#:import menu menu

MainWidget:


<MainWidget>
    canvas.before:
        Rectangle:
            size: self.size
            source: 'images/bg4.jpg'
    menu_widget: menu_widget
    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.distance_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: .18, .2
        pos_hint: {"x": 0, "top": 1}
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: .18, .2
        pos_hint: {"center_x": 0.5, "top": 1}
    Label:
        text: root.shield_count_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: .18, .2
        pos_hint: {"right": 1, "top": 1}
    Label:
        text: root.lives_txt
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        size_hint: .18, .2
        pos_hint: {"x": 0, "y": 0}